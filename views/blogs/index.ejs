<html lang="en">
<!-- El - hace que no se salte los caracteres escpeciales -->
<!-- El = sirve para imprimir datos -->
<!-- El % sirve para hacer uso de la logica de javascript -->
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <!-- Redirigimos a la pagina de cada blog -->
        <a class="single" href="/blogs/<%= blog._id %>">
          <h3 class="title"><%= blog.title %></h3>
          <p class="snippet"><%= blog.snippet %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>

  <%- include("../partials/footer.ejs") %>
</body>
</html>